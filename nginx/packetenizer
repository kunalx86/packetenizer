server {
        listen 80;
        # Add your server IP/Domain name
        server_name yourdomain.com;

        # Add path to your static file folder
        location /static {
                # Path to your static folder
                alias /usr/local/src/packetenizer/app/static;
        }

        location / {
                proxy_pass http://localhost:8000;
                include /etc/nginx/proxy_params;
                proxy_redirect off;
        }
}